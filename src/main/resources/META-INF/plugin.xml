<!-- Plugin Configuration File: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN, cannot be changed between the plugin versions. -->
    <id>io.github.bhuyanp.funky-banners</id>

    <name>Funky Banners</name>

    <vendor url="https://github.com/bhuyanp/spring-banner-intellij-plugin">Prasanta Bhuyan</vendor>
    <description><![CDATA[

<html>
<body>

<p>
    Enhance your Spring Boot development experience with visually appealing startup banners.
    Choose from predefined themes or create your own custom theme to make your Spring Boot application stand out.
</p>


<h3>Features</h3>
- Seamless integration with existing Spring Boot projects<br/>
- Choose from light or dark theme to match your IDE's global theme<br/>
- Let the plugin surprise you with randomized theme "Surprise Me"<br/>
- Customize the banner to your heart's content using Custom theme<br/>
- Ability to override global theme settings at individual project level<br/>
- Caption underneath banner lists SpringBoot and JDK versions<br/>


<h3>Alternatives</h3>
If you are not using IntelliJ IDEA, consider using these alternatives.<br/>
- <a href="https://github.com/bhuyanp/spring-banner-gradle-plugin">Gradle Plugin</a><br/>
- <a href="https://github.com/bhuyanp/spring-banner-maven-plugin">Maven Plugin</a><br/>

<h3>Credits</h3>
- <a href="https://www.figlet.org">Figlet</a><br/>
- <a href="https://github.com/dtmo/jfiglet">JFiglet</a><br/>
- Colorizer by <a href="https://github.com/dialex/jcolor">JColor</a>

<h3>Love Funky Banners?</h3>
Please consider <a href="https://buymeacoffee.com/bhuyanp">supporting</a> our efforts.<br/>

</body>
</html>


    ]]></description>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <resource-bundle>messages.FunkyBanner</resource-bundle>
    <applicationListeners>
        <listener
                class="io.github.bhuyanp.intellij.springbanner.SpringBannerBuildListener"
                topic="com.intellij.compiler.server.BuildManagerListener"/>
    </applicationListeners>
    <extensions defaultExtensionNs="com.intellij">

        <applicationConfigurable parentId="tools"
                                 bundle="messages.FunkyBanner"
                                 key="sbb.plugin.name"
                                 id="io.github.bhuyanp.intellij.springbanner.root"
                                 instance="io.github.bhuyanp.intellij.springbanner.RootConfigurable"
        />
        <applicationConfigurable
                parentId="io.github.bhuyanp.intellij.springbanner.root"
                bundle="messages.FunkyBanner"
                key="sbb.plugin.setting.global"
                instance="io.github.bhuyanp.intellij.springbanner.GlobalConfigurable"
                id="io.github.bhuyanp.intellij.springbanner.GlobalConfigurable"/>
        <projectConfigurable
                parentId="io.github.bhuyanp.intellij.springbanner.root"
                instance="io.github.bhuyanp.intellij.springbanner.ProjectConfigurable"
                id="io.github.bhuyanp.intellij.springbanner.ProjectConfigurable"
                bundle="messages.FunkyBanner"
                key="sbb.plugin.setting.project"
                nonDefaultProject="true"/>
        <notificationGroup id="io.github.bhuyanp.intellij.springbanner.BannerNotifier"
                           displayType="BALLOON"
                           bundle="messages.FunkyBanner"
                           key="sbb.plugin.notifier"/>
    </extensions>

    <actions>
        <action
                id="io.github.bhuyanp.intellij.springbanner.GenerateBannerAction"
                class="io.github.bhuyanp.intellij.springbanner.GenerateBannerAction"
                text="Generate Banner"
                description="Generates spring boot banner">
            
            <synonym text="GB"/>

            <add-to-group group-id="ToolsMenu"
                          relative-to-action="GenerateJavadoc"
                          anchor="after"/>
            <!-- Add the first and second keystrokes to all keymaps... -->
            <keyboard-shortcut
                    keymap="$default"
                    first-keystroke="control alt G"
                    second-keystroke="B"/>

            <!-- ...except the "Mac OS X" keymap and its children. -->
            <keyboard-shortcut
                    keymap="Mac OS X"
                    first-keystroke="control alt G"
                    second-keystroke="B"
                    remove="true"/>
            <!-- The "Mac OS X 10.5+" keymap and its children will have only
            this keyboard shortcut for this action. -->
            <keyboard-shortcut
                    keymap="Mac OS X 10.5+"
                    first-keystroke="control alt G"
                    second-keystroke="B"
                    replace-all="true"/>
        </action>
    </actions>
</idea-plugin>
